<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.strokerehab.strokerehab">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_white"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_white"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".DoctorDashboardActivity"
            android:label="@string/title_activity_doc_dashboard"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AppIntroActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar2" />

        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".LoginActivity" />

        <activity android:name=".SignActivity" />

        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GraphActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TutorialActivity"></activity>
    </application>

</manifest>